<h1><%= @article.title %></h1>

<p><%= @article.body %></p>


<ul>
  <li><%= link_to "Редактивровать", edit_article_path(@article) %></li>
  <li><%= link_to "Удалить", article_path(@article),
                  method: :delete,
                  data: { confirm: "Удалить статью?" } %></li>  
  <li><%= link_to "Вернуться на главную", articles_path %></li>
</ul>
